<!--pages/setupnet/index.wxml-->
<view class="container">
  <view class="c-tip">
    <view class="c-tip__title">配网教程</view>
    <view class="c-tip__item">先连接到 WIFI</view>
    <view class="c-tip__item">在输入 WIFI 密码</view>
  </view>
  <view class="c-input">
    <view class="c-input__title">WIFI 信息</view>
    <input class="c-input__ssid" placeholder="SSID" value="{{ssid}}" bindinput="inputWifi" />
    <input class="c-input__password" placeholder="密码" bindinput="inputPassword" />
    <view class="c-input__submit btn circle-btn bg-green" bindtap="onConfirm">确认</view>
  </view>
</view>